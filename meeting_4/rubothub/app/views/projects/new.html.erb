<h2>New Project</h2>

<%= form_for @project, url: {action: "create"} do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :first_name, :placeholder => :first_name %>
  <%= f.text_field :last_name, :placeholder => :last_name %>
  <%= f.submit "Create" %>
<% end %>
